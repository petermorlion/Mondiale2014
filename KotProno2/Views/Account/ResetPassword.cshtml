@model KotProno2.Models.ViewModels.ResetPasswordViewModel

@using KotProno2.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Paswoord opnieuw instellen";
}

<h2>@ViewBag.Title.</h2>

@if (ViewBag.StatusMessage != "")
{
    <p class="alert alert-success">@ViewBag.StatusMessage</p>
}

@if (ViewBag.ErrorMessage != "")
{
    <p class="alert alert-error">@ViewBag.ErrorMessage</p>
}

<div class="row">
    <div class="col-lg-12">

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4>Een lokale login creëeren</h4>
            <hr />
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="lg-offset-2 col-lg-10">
                    <input type="submit" value="Paswoord instellen" class="btn btn-default" />
                </div>
            </div>
        }

    </div>
</div>